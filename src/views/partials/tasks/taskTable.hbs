{{#if tasks}}
    <table class="table table-bordered table-hover table-dark">
        <thead>
            <tr>
                <th>N.</th>
                <th>Title</th>
                <th>Descripcion</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            {{#each tasks}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>
                        {{#if done}}
                            <a class="btn btn-warning" href="/tasks/{{_id}}/toggleDone">Pendiente</a>
                        {{else}}
                            <a class="btn btn-success" href="/tasks/{{_id}}/toggleDone">Realizado</a>
                        {{/if}}
                        <a class="btn btn-danger" href="/tasks/{{_id}}/delete">Borrar</a>
                        <a class="btn btn-info" href="/tasks/{{_id}}/edit">Actualizar</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <div class="h-100 d-flex align-items-center justify-content-center">
        <div class="text-center text-white">
            <h1>No hay Tareas</h1>
            <img class="w-75" src="/icons/empty.svg" alt="">
        </div>
    </div>
{{/if}}